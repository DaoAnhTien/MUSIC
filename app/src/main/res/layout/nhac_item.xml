<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:id="@+id/Nhac"
        android:src="@drawable/nhac"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMaNhac"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:text="Mã Nhạc :"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvtenNhac"
            android:textSize="12dp"
            android:text="Tên Nhạc :"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvtenTlN"
            android:textSize="14dp"
            android:text="Tên Thể Loại Nhạc :"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="13dp"
                android:textStyle="bold"
                android:text="Tên Ca Sĩ"
                android:id="@+id/tvTenCS"
                />
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Năm RĐ"
                android:id="@+id/tvnamRD"/>
        </LinearLayout>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="Link Bài Hát"
            android:id="@+id/tvLInkBH"
            android:layout_marginBottom="15dp"
            />
    </LinearLayout>


    <ImageView
        android:id="@+id/imgDeleteNhac"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close"/>

</LinearLayout>

